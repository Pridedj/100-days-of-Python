# Create a function called greet(). 
# Write 3 print statements inside the function.
# Call the greet() function and run your code.
def greet():
  print("Hey")
  print("Hello")
  print("Hiya")
greet()

#Creating a function that allows for input. name is the parameter, and Darion is the argument
def greet_with_name(name):
  print(f"Hey {name}")
  print(f"Hello, {name}")
  print(f"Hiya, {name}")
greet_with_name("Darion")

#Function with more than one input
def greet_with(name, location):
  print(f'Hey {name}, arent you from {location}?')
  print(f'I know someone from {location}')
  print(f'Id like to visit {location} with {name}')
greet_with("Darion", "Florence")

#Use key word arguments
def greet_key(location = "Florence", name = 'Darion'):
  print(f'Hey {name},')
  print(f'I remember you from {location}')
  print(f'{location} is a good place to live. Is it not, {name}?')
greet_key()
